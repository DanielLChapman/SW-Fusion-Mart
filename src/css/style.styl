// Import all partials
@require './_*.styl'

body, html {
	position: absolute;
	min-height: 100%;
	height: 100vh;
	width: 100%;
}
html {
	overflow-y hidden;
}
body {
	overflow-y auto;
}
nav {
	width: 155px;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: #f7f7f7;
}

.main-monster-display {
	width: calc(100% - 455px);
	height: 100%;
	margin: 0 auto;
	position: relative;
	top: 15px;
	text-align: center;
	ul {
		li {
			display: inline-block;
			width: 250px;

		}
	}
}

.mini-cart-display {
	width: 300px;
	height: 100%;
	box-shadow: 0 0 5px #000;
	position: fixed;
	right: 0;
	top: 0;
	background: white;
	transition: 1s;
	z-index: 5;
	ul {
		list-style none;
		margin: 0;
		padding: 0;
		li {
			margin: 0;
			padding: 0;
		}
	}
	.mini-cart {
		padding: 8px;
		height: calc(100vh - 77px);
		overflow-y: auto;
	}
}

.hide-cart {
	width: 100%;
	margin: 0 auto;
	padding: 0;
	background: white;
	border:	1px solid black;
	border-top: 1px solid white;
	height: 75px;
	position: relative;
	top: 50%;
}
.to-open-mini-cart {
	position: fixed;
	z-index: 2;
	right: 0;
	top: 0;
	border:1px solid black;
	padding: 20px 50px 20px 50px;
	font-size: 30px;
	cursor: pointer;
	color: green;
	transition: 1s;
}

.monster 
	width: 24%;
	min-width: 225px;
	border:1px solid white;
	text-align: center;
	margin-bottom: 25px;
	img 
		width: 100px;
		height: auto;
		position: relative;
	.monster-text 
		float left;
		width 130px;
		font-size .6em;

	.monster-add-button
		background transparent !important;
		border: 1px solid transparent !important;
		color green;
		right: 15px;
		position: relative;
		&:active {
			background rgba(0,0,0,.05) !important;
			top: 2px;
		}

.settings-page, .cart-app-display
	width: calc(100% - 455px);
	margin: 0 auto;
	text-align: center;
	padding-bottom: 100px;
	h3 
		font-size: 1.7rem;
		text-align: center;
		width: 100%;
		padding-top: 15px;
	h4 
		font-size: 1.5rem;
	h2 
		padding: 15px 0px 15px 0px;
	table 
		padding: 8px;
		border-collapse: collapse;
		width: 650px;
		margin: 0 auto;
		th, td
			border:1px solid #ddd;
			text-align: left;
		th
			padding: 12px;
			background-color: lightgreen;
		td 
			padding: 8px 8px 8px 12px;
		input
			width: 70px;
			padding-left: 10px;
			margin: 0px 10px 0px 10px;
			text-align: center;
	.settings-button 
		position: relative;
		height: 50px;
		min-width: 85px;
		width: auto;
		background: white;
		border: 1px solid #000;
		border-top: 1px solid transparent;

