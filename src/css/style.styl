// Import all partials
@require './_*.styl'

body, html {
	position: absolute;
	min-height: 100%;
	height: 100vh;
	width: 100%;
}
html {
	overflow-y hidden;
}
body {
	overflow-y auto;
}
.information {
	text-align: center;
	width: 50%;
	position: relative;
	margin: 0 auto;
	font-size: 14px;
	margin-top: 15px;
	color: rgba(0,0,0,.6);
	margin-bottom: 10px;
	@media screen and (max-width: 400px) {
		margin-top: 65px;
	}
}
.navigation 
	position: relative;
	height: 100%;
	.mobile-menu-toggle 
		display: none;
		position: fixed;
		z-index: 2;
		left: 0;
		top: 0;
		padding: 20px 50px 20px 50px;
		font-size: 30px;
		cursor: pointer;
		background: white;
		color: green;
		transition: 1s;
		@media screen and (max-width: 746px)
			display: block;
		@media screen and (max-width: 586px)
			box-shadow: 0 0 5px #000;

	.mobile-menu-toggle-close
		display: none;
		z-index: 5;
		font-size: 23px;
		position: fixed;
		top: 0;
		left: 130px;
		cursor: pointer;
		color: rgba(0,0,0,.7);
		background: white;
	#toggle 
		width: 100px;
		height: 50px;
		display: none;
		position: fixed;
		top: 0;
		left: 50px;
	
	input#toggle:checked 
		position: relative;
		z-index: 4;
	
	input#toggle:checked ~ nav 
		display: block;
	
	input#toggle:checked ~ .mobile-menu-toggle-close 
		display: block;

	
	nav 
		width: 155px;
		height: 100%;
		overflow-y: auto;
		position: fixed;
		top: 0;
		left: 0;
		background: #f7f7f7;
		z-index: 3;
		text-align: left !important;
		ul 
			li 
				font-size: 13px;
				position: relative;
				left: 0px;
				margin-bottom: 20px;
				text-align: center;
				a 
					text-decoration: none;
					color: #000;
				
			
			.title-li 
				margin-bottom: 150px;
				width: 200px;
				font-size: 14px;
				transform: rotate(-90deg);
				margin-top: 120px;
				left: -23px;
			
		
		@media screen and (max-width: 746px) 
			display: none;

.main-monster-display {
	width: calc(100% - 455px);
	height: 100%;
	margin: 0 auto;
	position: relative;
	top: 15px;
	text-align: center;
	ul {
		li {
			display: inline-block;
			width: 250px;

		}
	}
	@media screen and (max-width: 746px) {
		width: 300px;
	}
}

.mini-cart-display
	width: 300px;
	height: 100%;
	box-shadow: 0 0 5px #000;
	position: fixed;
	right: 0;
	top: 0;
	background: white;
	transition: 1s;
	z-index: 5;
	ul {
		list-style none;
		margin: 0;
		padding: 0;
		li {
			margin: 0;
			padding: 0;
		}
	}
	.mini-cart {
		padding: 8px;
		height: calc(100vh - 77px);
		overflow-y: auto;
	}
	.cart-table 
		border-collapse: collapse;
		width: 100%;
		margin: 0 auto;
		th, td
			border:1px solid #ddd;
			text-align: left;
			font-size: 16px;
		th
			background-color: lightgreen;
		input
			width: 70px;
			padding-left: 10px;
			margin: 0px 10px 0px 10px;
			text-align: center;
		.mini-cart-td 
			padding-left: 16px;


.hide-cart {
	width: 100%;
	margin: 0 auto;
	padding: 0;
	background: white;
	height: 75px;
	position: relative;
	top: 50%;
	border:1px solid transparent;
}
.to-open-mini-cart
	position: fixed;
	z-index: 2;
	right: 0;
	top: 0;
	padding: 20px 50px 20px 50px;
	font-size: 30px;
	cursor: pointer;
	color: green;
	background: white;
	@media screen and (max-width: 586px) 
		box-shadow: 0 0 5px #000;
	transition: 1s;


.monster 
	width: 24%;
	min-width: 225px;
	border:1px solid white;
	text-align: center;
	margin-bottom: 25px;
	img 
		width: 100px;
		height: auto;
		position: relative;
	.monster-text 
		float left;
		width 130px;
		font-size .6em;

	.monster-add-button
		background transparent !important;
		border: 1px solid transparent !important;
		color green;
		right: 15px;
		position: relative;
		&:active {
			background rgba(0,0,0,.05) !important;
			top: 2px;
		}

.settings-page, .checkout-display
	margin: 0 auto;
	text-align: center;
	padding-bottom: 100px;
	width: calc(100% - 155px);
	right: 0;
	left: 80px;
	z-index: 1;
	position: relative;

	h3 
		font-size: 1.7rem;
		text-align: center;
		width: 100%;
		padding-top: 15px;
	h4 
		font-size: 1.5rem;
	h2 
		padding: 15px 0px 15px 0px;
	table 
		padding: 8px;
		border-collapse: collapse;
		width: 650px;
		margin: 0 auto;
		th, td
			border:1px solid #ddd;
			text-align: left;
		th
			padding: 12px;
			background-color: lightgreen;
		td 
			padding: 8px 8px 8px 12px;
		input
			width: 70px;
			padding-left: 10px;
			margin: 0px 10px 0px 10px;
			text-align: center;
		@media screen and (max-width: 850px) 
			padding: 0;
			width: 400px;
			font-size: 14px;
			overflow-x: auto;
			th
				padding: 2px;
			td
				padding: 2px;
			input
				width: 50px;
	.settings-button, .remove-5-star-button
		position: relative;
		height: 50px;
		min-width: 85px;
		width: auto;
		background: white;
		border: 1px solid #000;
		border-top: 1px solid transparent;
		@media screen and (max-width: 763px) {
			border-top: 1px solid #000;
		}
	.remove-5-star-button 
		border-top:1px solid #000;
		margin-bottom: 15px;
		@media screen and (max-width: 586px) 
			width: 95%;
			font-size: 14px;
			position: relative;
	.cart-table 
		border-collapse: collapse;
		width: 100%;
		padding: 0;
		margin: 0 auto;
		th, td
			border:1px solid #ddd;
			text-align: left;
			font-size: 16px;
		th
			background-color: lightgreen;
		input
			width: 70px;
			padding-left: 5px;
			margin: 0px 5px 0px 5px;
			text-align: center;
		.mini-cart-td 
			padding-left: 16px;
	@media screen and (max-width: 746px) 
		width: 100%;
		left: 0;
		h3 
			width: 95%;
			left: 2.5%;
			font-size: 1.4rem;
		h2 
			font-size: 1.6rem;
			margin-top: 20px;
		.settings-button 
			margin-top: 80px;
	@media screen and (max-width: 660px)
		.content
			margin-top: 85px;

.cart-app-display
	width: calc(100% - 305px);
	margin: 0 auto;
	text-align: center;
	height: auto;
	float: right;
	padding: 0px 100px 100px 0;
	h3 
		font-size: 1.7rem;
		text-align: center;
		width: 100%;
		padding-top: 15px;
	h4 
		font-size: 1.5rem;
	h3
		font-size: 1.7rem;
	h2 
		padding: 15px 0px 15px 0px;	
	.cart-display 
		width: 600px;
		height: 100%;
		position: relative;
		float: left;
	.cart-right-hand
		width: 300px;
		right: 25px;
		text-align: center;
		position: fixed;
		padding-bottom: 25px;
	.cart-section 
		display: none;
	.button-link
		position: relative;
		width: 155px;
		height:50px;
		background-color: white;
		border: 2px solid #ddd;
		&:active 
			top: 3px;
			background-color: rgba(0,0,0,.2);
	.button-link-2, .button-link-1
		display: none;
	table 
		padding: 8px;
		border-collapse: collapse;
		width: 650px;
		margin: 0 auto;
		margin-top: 30px;
		th, td
			border:1px solid #ddd;
			text-align: left;
		th
			padding: 12px;
			background-color: lightgreen;
		td 
			padding: 8px 8px 8px 12px;
		input
			width: 70px;
			padding-left: 10px;
			margin: 0px 10px 0px 10px;
			text-align: center;

	@media screen and (max-width: 1400px) 
		width: calc(100% - 175px);
	@media screen and (max-width: 1123px)
		table 
			width: 500px;	
			left: 25px;
			margin: initial;
			margin-top: 30px;
	@media screen and (max-width: 963px) 
		width: 100%;
		left: 155px;
		position: relative;
		.cart-right-hand
			width: calc(100% - 155px);
			right: 0;
			background: white;
		table
			width: 400px;
			margin: 0 auto;
			margin-top: 150px;
			overflow-x: auto;
		.cart-display 
			width: 100%;
	@media screen and (max-width: 746px) 
		left: 0;
		width: 100%;
		padding-right: 0;
		.cart-right-hand
			width: 100%;
			right: 0;

	

.remove 
	color: red !important;

